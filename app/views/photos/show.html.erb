<h2>Show Image Page</h2>

<%- model_class = Photo -%>

<div class="page-header">

<h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

</div>

<dl class="dl-horizontal">

<dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>

<dd><%= @photo.title %></dd>

<dt></dt>

 <% if @photo.file.attached? %>
      <%= image_tag @photo.file, width: 300 %><br>
    <% end %>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),

photos_path, :class => 'btn btn-default' %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),

edit_photo_path(@photo), :class => 'btn btn-default' %>

<%= button_to t('.destroy', :default => t("helpers.links.destroy")),

photo_path(@photo),

:method => 'delete',

:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },

:class => 'btn btn-danger' %>